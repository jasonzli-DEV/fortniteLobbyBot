# MongoDB Connection
# For MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/database
# Note: URL-encode special characters in password (e.g., $ = %24, @ = %40)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/fortnite_bots

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# Timeout Settings (SERVER-CONTROLLED, NOT USER-CONFIGURABLE)
DEFAULT_SESSION_TIMEOUT=30
TIMEOUT_WARNING_THRESHOLD=5
SESSION_EXTENSION_DURATION=15
MAX_EXTENSIONS_PER_SESSION=2

# Resource Limits (SERVER-CONTROLLED)
MAX_ACCOUNTS_PER_USER=5
MAX_CONCURRENT_BOTS_PER_USER=3
MAX_CONCURRENT_BOTS_GLOBAL=50
COMMAND_RATE_LIMIT=10

# Cosmetic Search Settings
COSMETIC_RESULTS_PER_PAGE=25
COSMETIC_CACHE_REFRESH_HOURS=24

# System Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
